<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ViewSwitcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout12"
    android:background="@color/White_Dash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:id="@+id/scrollView"
        tools:context="com.ekant.JustBusinesses.DashBoard">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity"
            >
            <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    >
                    <RelativeLayout
                        android:id="@+id/relativelayoutnewsandevents"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/ActivityDashBoard_RL_layout_margin"
                        android:background="@color/dash_background"
                        android:padding="@dimen/ActivityDashBoard_RL_padding"
                        android:layout_below="@+id/userdetails"

                        >
                        <TextView
                            android:id="@+id/textview123"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/ActivityDashBoard_RL_layout_margin"
                            android:textColor="@color/dash_background_getVertical"
                            android:layout_centerVertical="true"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/dashboard_TextView_text"/>
                    </RelativeLayout>
                </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:background="@color/other19"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout_gridtableLayout"
                        android:layout_width="1240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <GridView
                            android:id="@+id/gridView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:columnWidth="200dp"
                            android:gravity="center"
                            android:numColumns="6"
                            android:horizontalSpacing="5dp"
                            android:scrollbarAlwaysDrawHorizontalTrack="true"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:scrollbars="horizontal"
                            android:stretchMode="none"
                            android:verticalSpacing="1dp">

                        </GridView>


                    </LinearLayout>
                </FrameLayout>
            </HorizontalScrollView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
                android:layout_marginTop="@dimen/ActivityDashBoard_LinearLayout3_layout_marginTop"
                android:layout_marginRight="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
                android:visibility="gone"
            >
            <TextView
                android:id="@+id/title236"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black_Dash"
                android:textSize="@dimen/ActivityDashBoard_LinearLayout3_Textview_textSize"
                android:typeface="sans"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
             />
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black_Dash"
                android:textSize="@dimen/ActivityDashBoard_LinearLayout3_Textview2_textSize"
                android:layout_marginTop="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
                />
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black_Dash"
                android:layout_marginTop="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
                />
            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black_Dash"
                android:autoLink="web"
                android:layout_marginTop="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
                />
            <TextView
                android:id="@+id/quate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black_Dash"
                android:layout_marginTop="@dimen/ActivityDashBoard_LinearLayout3_layout_marginLeft"
                android:gravity="left"
                />
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/progressbar"
                />

</LinearLayout>


            <!-- GetBusiness-->


            <RelativeLayout
                    android:id="@+id/givemsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ActivityDashBoard_RR4_layout1_margin"
                    android:background="@color/dash_background_getVertical"
                    android:layout_below="@+id/userdetails"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/dash_background_getVertical"
                    >
                <ImageView
                    android:id="@+id/getImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon1"
                    android:layout_marginTop="21dp"
                    android:layout_centerInParent="true"
                    />
                    <TextView
                        android:id="@+id/get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/White_Dash"
                        android:text="GET BUSINESS"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignBaseline="@+id/getImage"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/getImage"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/givebussiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/White_Dash"
                        android:layout_below="@+id/get"
                        android:layout_alignBaseline="@+id/getImage"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="@string/dashboard_tv_get_business"/>
                    <Button
                        android:id="@+id/add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GET BUSINESS"
                        android:textSize="18dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="90dp"
                        android:textColor="@color/White"
                        android:background="@drawable/getbuttonchange"
                        android:layout_alignParentRight="true"
                        android:onClick="CallChooseActivityGet"
                        android:layout_marginTop="33dp"
                        android:layout_marginBottom="24dp" />

                </LinearLayout>
                </RelativeLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/givemsg"
                    android:id="@+id/give"
                    tools:context=".MainActivity"
                    android:background="#eeeeee"
                    >
                    <ListView
                        android:id="@+id/dynamicget"
                        android:dividerHeight="1dp"
                        android:divider="@color/dash_listviewHeader"
                        android:padding="@dimen/ActivityDashBoard_lv_padding"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#eeeeee"
                        >
                    </ListView>
                </LinearLayout>

            <!-- Give Business-->

                <RelativeLayout
                    android:id="@+id/wantmsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ActivityDashBoard_RR5_layout1_marginTop"
                    android:background="@color/White_Dash"
                    android:layout_below="@+id/give"

                    >

                    <!--android:layout_marginTop="@dimen/ActivityDashBoard_RR5_layout1_marginTop"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/White_Dash"

                        >


                        <ImageView
                            android:id="@+id/giveImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon2"
                            android:layout_marginTop="21dp"
                            android:layout_centerInParent="true"
                            />
                    <TextView
                        android:id="@+id/wantbussiness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#3ab2a4"
                        android:text="GIVE BUSINESS"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignBaseline="@+id/getImage"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/giveImage"
                        android:textStyle="bold"
                        />
                        <TextView
                            android:id="@+id/getbussiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="#3ab2a4"
                            android:layout_below="@+id/get"
                            android:layout_alignBaseline="@+id/giveImage"
                            android:textSize="18dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="@string/dashboard_tv_give_businessmessage"/>

                        <Button
                        android:id="@+id/wantadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GIVE BUSINESS"
                        android:textSize="18dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="90dp"
                        android:textColor="@color/dash_background_getVertical"
                        android:background="@drawable/getbutton_bg"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="33dp"
                        android:layout_marginBottom="24dp"
                        android:onClick="CallChooseActivityGive"
                        />

                    </LinearLayout>
                </RelativeLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/givemsg"
                android:id="@+id/want"
                tools:context=".MainActivity"
                android:background="#eeeeee"

                >
                <ListView
                    android:id="@+id/dynamicgive"
                    android:dividerHeight="1dp"
                    android:divider="@color/dash_listviewHeader"
                    android:padding="@dimen/ActivityDashBoard_lv_padding"
                    android:longClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"

                    >

                </ListView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/livemessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ActivityDashBoard_RR5_layout_marginTop"
                android:background="@color/dash_background"
                android:layout_below="@+id/give"

                >
                <TextView
                    android:id="@+id/livemessagestext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ActivityDashBoard_RR5_layout_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/dash_background_getVertical"
                    android:text="@string/dashboard_tv_livemessage"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/livealert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/livemsglayout"
                android:visibility="gone"
            >
                <TextView
                    android:id="@+id/tvlive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_livemessage_noreply"
                    android:textSize="16dp"
                    android:layout_marginTop="60dp"
                    android:textColor="@color/dash_adapertsavegivetags4"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    />
            </RelativeLayout>



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/livemsglayout"
                    android:id="@+id/want"
                    tools:context=".MainActivity">
                    <ListView
                        android:id="@+id/livemessagelist"
                        android:dividerHeight="1dp"
                        android:divider="@color/dash_listviewHeader"
                        android:padding="@dimen/ActivityDashBoard_lv_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        >

                    </ListView>
                </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/navList1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:divider="@color/White_Dash"
        android:dividerHeight="@dimen/ActivityDashBoard_dividerhieght"
        android:background="@color/White"/>


</android.support.v4.widget.DrawerLayout>
<RelativeLayout
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dash_background2"
    android:onClick="hide"
    >

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/help"
            android:id="@+id/Next"/>

    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/progressbar"
        />
</FrameLayout>