<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id= "@+id/getfriend"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:orientation="vertical"
    android:padding="@dimen/adapterfriendverticalstag_ll_padding">

    <TextView
        android:id = "@+id/friendcategory"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:textColor="@color/LightGray_pc"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:id = "@+id/friendsubcategory"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:textColor="@color/pc_graytextcolor"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id = "@+id/friendvertical"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:textColor="@color/pc_lightgraytextcolor"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        />
</LinearLayout>