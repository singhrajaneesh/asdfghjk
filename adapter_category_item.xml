<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id = "@+id/categoryimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptercategories_imageview_layout_height"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/subcategory"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="@color/Black_gb"
        android:textSize="18dp"
        android:layout_margin="@dimen/adaptercategories_textview_layout_margin"
        android:background="@drawable/text_background1"
        android:layout_centerInParent="true"/>
</RelativeLayout>
