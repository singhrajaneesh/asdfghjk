    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:background="@color/White_pc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ekant.justbiz.ModObservableScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activityfriendprofile_ModObservableScrollView_layout_marginBottom"
            android:id="@+id/scrollView"
            tools:context="com.ekant.JustBusinesses.DashBoard">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/profilelayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/companylogo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activityfriendprofile_imageview12_layout_height"
                            android:src="@drawable/banner1"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activityfriendprofile_view"/>
                        <ImageView
                            android:id="@+id/profilelogo"
                            android:layout_width="@dimen/activityfriendprofile_IMAGEVIEW_layout_width"
                            android:layout_height="@dimen/activityfriendprofile_IMAGEVIEW_layout_height"
                            android:background="@drawable/frame"
                            android:src="@drawable/blank_logo"
                            android:scaleType="fitXY"
                            android:layout_below="@id/companylogo"
                            android:layout_marginLeft="@dimen/activityfriendprofile_IMAGEVIEW_layout_marginLeft"
                            android:layout_marginTop="@dimen/activityfriendprofile_IMAGEVIEW_layout_marginTop"
                            android:focusable="false"
                            android:clickable="false"
                            android:layout_marginBottom="@dimen/activityfriendprofile_IMAGEVIEW_layout_marginBottom"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/activityfriendprofile_ll2_layout_marginLeft"
                            android:layout_below="@+id/companylogo"
                            android:layout_marginTop="@dimen/activityfriendprofile_ll2_layout_marginTop"
                            android:layout_toRightOf="@+id/profilelogo"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/companyname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text= "@string/activityfriendprofile_textview3_text"
                                    android:textColor="@color/LightGray_pc"
                                    android:textStyle="bold"
                                    android:textSize="22dp"

                                    android:layout_alignParentLeft="true"
                                    />

                                <!--android:textSize="@dimen/activityfriendprofile22_textview_textSize"-->

                            </RelativeLayout>
                            <TextView
                                android:id="@+id/companycategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text= "@string/activityfriendprofile_textview3_text"
                                android:textColor="@color/LightGray_pc"
                                android:textSize="18dp"
                                />

                            <!--android:textSize="@dimen/activityfriendprofile33_textview_textSize"-->
                            <!-- -->

                            <TextView
                                android:id="@+id/companySubcategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text= ""
                                android:textColor="@color/LightGray_pc"
                                android:textSize="18dp"
                                />

                            <!--android:textSize="@dimen/activityfriendprofile33_textview_textSize"-->

                        </LinearLayout>
                    </RelativeLayout>
                    <ScrollView
                        android:id="@+id/scrollView1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@color/White_pc"
                        android:layout_below="@+id/subcategory">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">



                        <RelativeLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <com.ekant.justbiz.ModTagLayout
                                android:id="@+id/tagLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/White_pc"
                                android:scrollbars="vertical"
                                android:fadingEdge="vertical"
                                android:layout_marginLeft="@dimen/activityfriendprofile_taglayout_layout_marginLeft"
                                android:layout_marginRight="@dimen/activityfriendprofile_taglayout_layout_marginRight"
                                xmlns:android="http://schemas.android.com/apk/res/android" />
                        </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/bottomlayout"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_below="@+id/linearLayout1"
                                android:layout_margin="@dimen/activityfriendprofile_rl2_layout_margin"
                                >

                                <TextView
                                    android:id="@+id/about"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/activityfriendprofile_rl2_tv_layout_marginTop"
                                    android:textColor="@color/LightGray_pc"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:text="@string/ActivityFriendProfile_text"
                                    android:textSize="22dp"
                                    />
                                <TextView
                                    android:id="@+id/aboutdesc"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Black_pc"
                                    android:textSize="@dimen/activityfriendprofile_rl2_tv2_textSize"
                                    android:text="@string/ActivityFriendProfile_text2"
                                    android:layout_below="@+id/about"
                                    android:layout_marginTop="5dp"
                                    android:maxLength="500"

                                    />
                            </RelativeLayout>
                       </LinearLayout>

                    </ScrollView>
                    <RelativeLayout
                        android:id="@+id/givemsg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activityfriendprofile_rl_layout_marginTop"
                        android:background="@color/LightGray_pc"
                        android:layout_below="@+id/scrollView1">
                        <TextView
                            android:id="@+id/givebussiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:background="@color/LightGray_pc"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="@dimen/activityfriendprofile_rl_textview_layout_marginLeft"
                            android:textColor="@color/Black_pc"
                            android:layout_centerVertical="true"
                            android:text="@string/activitymyprofile_textview_text"/>

                    </RelativeLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/givemsg"
                        android:id="@+id/get"
                        tools:context=".MainActivity">
                        <ListView
                            android:id="@+id/friendget"
                            android:dividerHeight="1dp"
                            android:padding="@dimen/activityfriendprofile_listview_padding"
                            android:background="#eeeeee"
                            android:divider="@color/White_pc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        </ListView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/wantmsg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activityfriendprofile_RelativeLayout_layout_marginTop"
                        android:background="@color/LightGray_pc"
                        android:layout_below="@+id/tagLayout12">
                        <TextView
                            android:id="@+id/wantbussiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activityfriendprofile_rl_textview_layout_marginLeft"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:background="@color/LightGray_pc"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/Black_pc"
                            android:text="@string/activitymyprofile_textview1_text"/>
                    </RelativeLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/wantmsg"
                        android:id="@+id/get"
                        tools:context=".MainActivity">
                        <ListView
                            android:id="@+id/friendgive"
                            android:dividerHeight="1dp"
                            android:divider="@color/pc_myprofile_listviewHeader"
                            android:padding="@dimen/activityfriendprofile_listview_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        </ListView>
                    </LinearLayout>


                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/bottomlayout">
                    <LinearLayout
                        android:id="@+id/btnLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/pc_savegivetags">
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </com.ekant.justbiz.ModObservableScrollView>

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/progressbar"
            />
    </android.support.v4.widget.DrawerLayout>



